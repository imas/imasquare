<nav class='light-blue'>
  <div class='nav-wrapper container'>
    <div class='col s12'>
      <a href='/' class='breadcrumb'>Top</a>
      <a href='/teams/<%= @team['id'] %>' class='breadcrumb'><%= h(@team['name']) %></a>
      <a href='/teams/<%= @team['id'] %>/edit' class='breadcrumb'>編集</a>
    </div>
  </div>
</nav>
<div class='container section'>
  <form action='/teams/<%= @team['id'] %>' method='post' class='col s12'>
    <div class='row'>
      <div class='col s12'>
        <p>
          <input type='radio' id='is_single_true' name='is_single' value='1' <%= @team['is_single'] == 1 ? 'checked' : '' %> />
          <label class='grey-text text-darken-1' for="is_single_true">一人でもくもく</label>
        </p>
        <p>
          <input type='radio' id='is_single_false' name='is_single' value='0' <%= @team['is_single'] == 0 ? 'checked' : ''  %> />
          <label class='grey-text text-darken-1' for="is_single_false">同僚さんとわいわい</label>
        </p>
      </div>
    </div>
    <div class='row'>
      <div class='input-field col s12'>
        <label for='name'>チーム名</label>
        <input type='text' name='name' value='<%= h(@team['name']) %>' />
      </div>
    </div>
    <div class='row'>
      <div class='input-field col s12'>
        <label for='name'>チームの説明(markdownが使えます)</label>
        <textarea name='description' class='materialize-textarea'><%= h(@team['description']) %></textarea>
      </div>
    </div>
    <button type='submit' class='waves-effect waves-light btn blue'>
      更新
    </button>
  </form>
</div>
