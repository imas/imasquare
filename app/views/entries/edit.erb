<nav class='light-blue'>
  <div class='nav-wrapper container'>
    <div class='col s12'>
      <a href='/' class='breadcrumb'>Top</a>
      <a href='/teams/<%= @entry['team_id'] %>' class='breadcrumb'><%= h(@entry['team_name']) %></a>
      <a href='/entries/<%= @entry['id'] %>' class='breadcrumb'><%= h(@entry['title']) %></a>
      <a href='/entries/<%= @entry['id'] %>/edit' class='breadcrumb'>編集</a>
    </div>
  </div>
</nav>
<div class='container section'>
  <form action='/entries/<%= @entry['id'] %>' method='post' class='col s12'>
    <div class='row'>
      <div class='input-field col s12'>
        <label for='name'>タイトル</label>
        <input type='text' name='title' value='<%= h(@entry['title']) %>' />
      </div>
    </div>
    <div class='row'>
      <div class='input-field col s12'>
        <select name='slide_available'>
          <option value=1 <%= @entry['slide_available'] == 1 ? 'selected' : '' %>>はい</option>
          <option value=0 <%= @entry['slide_available'] == 0 ? 'selected' : '' %>>いいえ</option>
        </select>
        <label for='slide_available'>プロジェクターを使いますか？</label>
      </div>
    </div>
    <div class='row'>
      <div class='input-field col s12'>
        <select name='demo_available'>
          <option value=1 <%= @entry['demo_available'] == 1 ? 'selected' : '' %>>はい</option>
          <option value=0 <%= @entry['demo_available'] == 0 ? 'selected' : '' %>>いいえ</option>
        </select>
        <label for='demo_available'>デモはありますか？</label>
      </div>
    </div>
    <div class='row'>
      <div class='input-field col s12'>
        <label for='name'>概要(markdownが使えます)</label>
        <textarea name='summary' class='materialize-textarea'><%= h(@entry['summary']) %></textarea>
      </div>
    </div>
    <div class='row'>
      <div class='input-field col s12'>
        <select name='time_request'>
          <option value=3 <%= @entry['time_request'] == 3 ? 'selected' : '' %>>3分(プロデューサーLT・簡単に説明)</option>
          <option value=5 <%= @entry['time_request'] == 5 ? 'selected' : '' %>>5分(標準)</option>
          <option value=8 <%= @entry['time_request'] == 8 ? 'selected' : '' %>>8分(デモをやる人向け)</option>
        </select>
        <label for='time_request'>持ち時間の希望(参考にします)</label>
      </div>
    </div>
    <div class='row'>
      <div class='input-field col s12'>
        <select name='order_request'>
          <option value="none" <%= @entry['order_request'] == 'none' ? 'selected' : '' %>>なし</option>
          <option value="earlier" <%= @entry['order_request'] == 'earlier' ? 'selected' : '' %>>最初の方</option>
          <option value="middle" <%= @entry['order_request'] == 'middle' ? 'selected' : '' %>>真ん中あたり</option>
          <option value="later" <%= @entry['order_request'] == 'later' ? 'selected' : '' %>>後の方</option>
        </select>
        <label for='order_request'>発表順の希望(参考にします)</label>
      </div>
    </div>
    <div class='row'>
      <div class='input-field col s12'>
        <label for='note'>備考</label>
        <textarea name='note' class='materialize-textarea'><%= h(@entry['note']) %></textarea>
      </div>
    </div>
    <button type='submit' class='waves-effect waves-light btn blue'>
      更新
    </button>
  </form>
</div>
