<nav class='light-blue'>
  <div class='nav-wrapper container'>
    <div class='col s12 truncate'>
      <a href='/' class='breadcrumb'>Top</a>
      <a href='/teams/<%= @entry['team_id'] %>' class='breadcrumb'><%= h(@entry['team_name']) %></a>
      <a href='/entries/<%= @entry['entry_id'] %>' class='breadcrumb'><%= h(@entry['title']) %></a>
    </div>
  </div>
</nav>

<div class='container section'>
  <div class='row'>
    <div class='col s12'>
      <div class='card'>
        <div class='card-image'>
          <div class='light-blue' style='height: 150px;'></div>
          <span class='card-title'><%= h(@entry['title']) %></span>
        </div>
        <div class='card-content'>
          <div class='markdown-text'>
            <%= markdown.render(h(@entry['summary'])) %>
          </div>
          <div class='right-align' style='margin-top: 1em;'>
            <div class='chip light-blue lighten-3'>
              <img src='<%= @entry['avatar_url'] %>' alt='<%= @entry['author_name'] %>' />
              <%= @entry['author_name'] %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% if @entry['author_id'] == current_user&.[]('id') %>
  <div class='fixed-action-btn'>
    <a href='/entries/<%= @entry['entry_id'] %>/edit' class='btn-floating btn-large blue waves-effect waves-light'>
      <i class='material-icons'>mode_edit</i>
    </a>
  </div>
<% end %>
